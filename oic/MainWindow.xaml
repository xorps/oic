<Window x:Class="oic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:oic"
        mc:Ignorable="d"
        Title="oic" Height="450" Width="800">
    <StackPanel>
        <Menu x:Name="menu" VerticalAlignment="Top">
            <MenuItem Header="_Formulary">
                <MenuItem Header="_Add" Click="MenuItem_FormularyAddClick"></MenuItem>
                <MenuItem Header="_View" Click="MenuItem_FormularyViewClick"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Inventory"></MenuItem>
        </Menu>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden"/>
    </StackPanel>
</Window>
