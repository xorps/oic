<Page x:Class="oic.FormularyModifyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:oic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FormularyModifyPage">

    <StackPanel MaxWidth="300">
        <TextBlock Text="Description" Margin="0,5,0,5"/>
        <TextBox x:Name="descriptionInput" Margin="0,5,0,5"/>
        <Button Click="Save_Click" Content="Save Description" Margin="0,5,0,5"/>
        <TextBlock x:Name="barcodesLabel" Text="Barcodes" Margin="0,10,0,10"/>
        <ItemsControl x:Name="barcodesControl">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Data}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate> 
        </ItemsControl>
        <Button Click="AddBarcode_Click" Content="Add Barcode" Margin="0,5,0,5"/>
        <Button Click="Cancel_Click" Content="Done" Margin="0,30,0,30"/>
    </StackPanel>
</Page>
