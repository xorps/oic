<Page x:Class="oic.AddBarcodePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:oic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddBarcodePage">
    <StackPanel>
        <TextBlock Text="Barcode Data" />
        <TextBox x:Name="barcodeInput" />
        <StackPanel Orientation="Horizontal">
            <Button Click="Save_Click" Content="Save" />
            <Button Click="Cancel_Click" Content="Cancel" />
        </StackPanel>
    </StackPanel>
</Page>
