<Page x:Class="oic.AddBarcodePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:oic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddBarcodePage">
    <StackPanel MaxWidth="300">
        <TextBlock Text="Scan or Enter Barcode" Margin="0,5,0,5" />
        <TextBox x:Name="barcodeInput" Margin="0,5,0,5" />
        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
            <Button Click="Save_Click" Content="Save" Margin="5,0,5,0" />
            <Button Click="Cancel_Click" Content="Cancel" Margin="5,0,5,0"/>
        </StackPanel>
    </StackPanel>
</Page>
